{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World's Average Temperature",
    "width": 800,
    "height": 400,
    "data": {"url": "https://raw.githubusercontent.com/asha0079/FIT3179-assignment2/main/Data/annual_temp_change.csv"},
    "mark": "bar",
    "transform": [
        {"filter": "datum.Source == 'GISTEMP'"}
      ],
    "encoding": {
      "color": {
        "field": "Mean",
        "type": "quantitative",
        "scale": {
            "scheme": "redblue",
            "reverse": true,
            "domainMid": 0
        }
    },
      "x": {
        "field": "Year", "type": "temporal",
        "axis": {
          "tickCount": 10
        }
      },
      "y": {
        "field": "Mean", "type": "quantitative",
        "title": "Average Temperature",
        "axis": {
          "gridColor": {
            "condition": {"test": "datum.value === 0", "value": "black"},
            "value": "#ddd"
          }
        }
      },
      "tooltip": [
        {
          "field": "Mean",
          "type": "quantitative",
          "title": "Average Temp."
        },
        {"field": "Year", "timeUnit": "year", "title": "Year"}
    ]
    }
  }
  